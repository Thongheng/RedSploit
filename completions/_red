#compdef red

# Minimal completion - just always complete files for positional args
_red() {
    _arguments \
        '-h[Show help]' \
        '-T[Target]:target:' \
        '-U[User]:user:' \
        '-D[Domain]:domain:' \
        '-H[Hash]:hash:' \
        '-i[Infra module]' \
        '-w[Web module]' \
        '-f[File module]' \
        '*:file:_files'
}

_red "$@"
